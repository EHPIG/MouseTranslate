<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:listDivider">@drawable/m_divider_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="colorPrimary">@color/colorPrimary1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark1</item>
    </style>

    <style name="AppTheme.BlueGrey">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/colorPrimary3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark3</item>
    </style>

    <style name="AppTheme.Green">
        <item name="colorPrimary">@color/colorPrimary4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark4</item>
    </style>

    <style name="AppTheme.Brown">
        <item name="colorPrimary">@color/colorPrimary5</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark5</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="colorPrimary">@color/colorPrimary6</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark6</item>
    </style>

    <style name="AppTheme.Girl">
        <item name="colorPrimary">@color/colorPrimary7</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark7</item>
    </style>

    <style name="AppTheme.Purple">
        <item name="colorPrimary">@color/colorPrimary8</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark8</item>
    </style>

</resources>
